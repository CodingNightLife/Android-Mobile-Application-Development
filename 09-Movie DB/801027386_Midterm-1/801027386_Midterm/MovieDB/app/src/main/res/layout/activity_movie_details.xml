<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arun.moviedb.MovieDetailsActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:text="Title:"
        android:layout_alignBaseline="@+id/textViewTitleResult"
        android:layout_alignBottom="@+id/textViewTitleResult"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewTitleResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewRating" />

    <ImageView
        android:id="@+id/imageViewMovieBig"
        android:layout_width="200dp"
        android:layout_height="150dp"

        android:layout_below="@+id/textViewTitleResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewOverView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Overview:"
        android:layout_below="@+id/imageViewMovieBig"
        android:layout_alignStart="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewOverViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/textViewOverView"
        android:layout_alignBottom="@+id/textViewOverView"
        android:layout_toEndOf="@+id/textViewOverView"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/textViewReleaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Release Date:"
        android:layout_above="@+id/textViewRating"
        android:layout_alignStart="@+id/textViewOverView" />

    <TextView
        android:id="@+id/textViewReleaseDateResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/textViewReleaseDate"
        android:layout_alignBottom="@+id/textViewReleaseDate"
        android:layout_toEndOf="@+id/textViewReleaseDate" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewReleaseDate"
        android:layout_marginBottom="54dp"
        android:text="Rating:" />

    <TextView
        android:id="@+id/textViewRatingResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewReleaseDate"
        android:layout_alignStart="@+id/imageViewMovieBig" />
</RelativeLayout>
